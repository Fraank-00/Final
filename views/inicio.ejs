<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <title>Foro</title>
</head>
<body>




   <div class="container mt-5">
    <h2>Foro</h2>
    <a type="button" class="btn btn-primary" href="/publicar">publicar</a>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titulo</th>
                <th>Contenido</th>
                <th>Enlace</th>
                <th>Fecha</th>
            
            </tr>
        </thead>
        <tbody>
            <%posteos.forEach((item) =>{ %>
             <tr>
                <th scope="row"><%=  item.id%></th>
                <th><%=  item.titulo%></th>
                <th><%=  item.descripcion%></th>
                <th><%=  item.enlace%> 
              <a href="<%= item.link %>" target="_blank">
                <img src="<%= item.link %>" alt="Imagen de la publicaciÃ³n">
            </a>
                </th>
                <th><%=  item.fecha%> </th>
                <td>
                    <a type="button" class="btn btn-warning btn-sm" href="/editar/<%= item.id%>" >Editar</a>
                    <a type="button" class="btn btn-danger btn-sm" href="/eliminar/<%= item.id%>" >
                        Eliminar</a>
                </td>
              </tr>
            <% })%>
        </tbody>
    </table>
</div>



   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</body>
</html>